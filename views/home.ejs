
<%- include("partials/header"); %>


<p><% posts.forEach(function(post){%>
<h1><%- post.title %></h1>
<% if((post.body.length>100) && (post.title !== "Home")){%>
<p><%= post.body.substring(0,100)+"..." %><a href="/posts/<%= post._id %>">Read More</a></p>
<%} else if(post.body.length<=100){%>
<p><%= post.body %><a href="/posts/<%=post._id%>">Read More</a></p>
<%} else{%>
  <p><%= post.body %></p>
<%}%>
<%})%>
</p>




<%- include("partials/footer"); %>
